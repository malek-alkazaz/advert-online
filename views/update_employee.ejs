<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->
<div class="container">
    <div class="add_employee" id="add_employee">
        <h2>Update Employee</h2>
        <div class="form">
            <form action="/update_employee" method="POST" >
                <input class="input" type="text" placeholder="username" name="id" value="<%= employee._id%>" hidden/>
                <input class="input" type="text" placeholder="username" name="username" value="<%= employee.username%>" />
                <input class="input" type="text" placeholder="password " name="password" value=""/>
                <input class="input" type="text" placeholder="First Name" name="firstname" value="<%= employee.firstname%>"/>
                <input class="input" type="text" placeholder="Father Name " name="fathername" value="<%= employee.fathername%>"/>
                <input class="input" type="text" placeholder="Last Name " name="lastname" value="<%= employee.lastname%>"/>
                <% m = new Date(employee.dateOfB) %>
                <% dateString = m.getUTCFullYear() +"/"+ (m.getUTCMonth()+1) +"/"+ m.getUTCDate() %>
                <input class="input" type="text" placeholder="Date Of Birth  " name="dateOfB" value="<%=dateString%>"/>
                <input class="input" type="text" placeholder="Address " name="address" value="<%= employee.address%>"/>
                <input class="input" type="text" placeholder="Phone Number " name="phone" value="<%= employee.phone%>"/>
                <input class="input" type="text" placeholder="Skills " name="skills" value="<%= employee.skills%>"/>
                <input type="submit" value="Update" />
            </form>
        </div>
    </div>
</div>
<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->